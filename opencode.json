{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "hf-core-agent",
  "permission": {
    "edit": "allow",
    "bash": {
      "*": "allow",
      "rm -rf /*": "deny",
      "rm -rf *": "ask",
      "git push --force*": "deny"
    },
    "webfetch": "allow"
  },
  "mcp": {
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    "tavily": {
      "type": "remote",
      "url": "{env:TAVILY_MCP_URL}",
      "enabled": true,
      "oauth": false
    }
  },
  "watcher": {
    "ignore": ["dist/**", "node_modules/**", ".git/**"]
  }
}
